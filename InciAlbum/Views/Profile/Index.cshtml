@model InciAlbum.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">Profil Güncelle</h2>

    <form method="post" class="p-4 border rounded shadow-sm bg-light">
        
        <div class="mb-3">
            <label for="tittle" class="form-label">Mail</label>
            <input type="text" asp-for="mail" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="descreption" class="form-label">Telefon</label>
            <input type="text" asp-for="phone" class="form-control"  />
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Şifre</label>
            <input type="text" asp-for="password" class="form-control"  />
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Şifre Tekrar</label>
            <input type="text" asp-for="confirmPassword" class="form-control" />
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-success">Güncelle</button>
        </div>
    </form>
</div>

<style>
    .container-fluid {
        background-color: #f8f9fa;
        padding: 30px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-dark {
        background-color: #343a40;
        color: white;
    }

        .btn-dark:hover {
            background-color: #495057;
        }
</style>

