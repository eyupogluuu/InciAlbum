@using InciAlbum.EntityLayer.Concrete
@model List<Stuff>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1 class="text-center my-title">Takımımız</h1>
<br />
<div class="table-responsive">
    <table class="table table-hover table-bordered my-table">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>Görev</th>
                <th>Fotoğraf</th>
                <th>Fecebook</th>
                <th>Twitter</th>
                <th>İnstagram</th>
                <th>Website</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.stuffId</td>
                    <td>@item.nameSurname</td>
                    <td>@item.tittle</td>
                    <td>@item.imageUrl</td>
                    <td>@item.faceUrl</td>
                    <td>@item.twUrl</td>
                    <td>@item.instaUrl</td>
                    <td>@item.websiteUrl</td>
                    <td><a class="btn btn-outline-danger" href="/Stuff/DeleteStuff/@item.stuffId">Sil</a></td>
                    <td><a class="btn btn-outline-success" href="/Stuff/UpdateStuff/@item.stuffId">Güncelle</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("AddStuff", "Stuff")" class="btn btn-dark-gray">Yeni Kişi Ekle</a>
</div>

<style>
    .my-title {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        color: #003366;
        margin-bottom: 20px;
    }

    .my-table {
        background-color: #ffffff;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table th {
        background-color: #003366;
        color: white;
    }

    .table td {
        text-align: center;
    }

    .btn-dark-gray {
        background-color: #003366;
        color: white;
        padding: 10px 20px;
        font-size: 1.2rem;
        border: none;
        border-radius: 0.3rem;
    }

        .btn-dark-gray:hover {
            background-color: #003399;
        }
</style>


