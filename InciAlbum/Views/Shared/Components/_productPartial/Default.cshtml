@using InciAlbum.EntityLayer.Concrete
@model List<Product>

<section class="team py-lg-5 py-3" id="pricing">
    <div class="container-fluid">
        <div class="inner-sec-w3ls-agileits p-lg-5 p-3">
            <div class="gallery_grids row">
                <div class="col-lg-9 card-desk text-center">
                    <div class="row prime">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 price-main-info card box-shadow">
                                <div class="card-body" style="padding: 0;">
                                    <div style="background-image: url('@item.imageUrl'); height: 200px; background-size: cover; position: relative;">
                                        <h4 class="product-title">@item.productName</h4>
                                    </div>
                                    <div style="padding: 15px;">
                                        <h5 class="card-title pricing-card-title">
                                            <span class="align-top">₺</span>@item.price
                                        </h5>
                                        <p>@item.descreption</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="col-lg-3 header-info mt-5">
                    <h3 class="heading">Ürünlerimiz</h3>
                    <p>Hayatın en özel anlarını ölümsüzleştirmek için sunduğumuz geniş ürün yelpazesi ile yanınızdayız!</p>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .product-title {
        position: absolute;
        bottom: 20px; /* Ürün adının aşağıdan uzaklığı */
        left: 20px; /* Ürün adının soldan uzaklığı */
        color: white; /* Yazı rengi */
        font-size: 1.5rem; /* Yazı boyutu */
        font-weight: bold; /* Yazı kalınlığı */
        z-index: 1; /* Diğer içeriklerin üstünde görünmesi için */
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.7); /* Metin gölgesi */
    }
</style>
