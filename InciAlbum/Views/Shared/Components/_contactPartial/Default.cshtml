@model InciAlbum.EntityLayer.Concrete.Contact

<section class="banner-bottom contact" id="contact">
	<div class="container-fluid">
		<div class="inner-sec-w3ls-agileits p-lg-5 p-3">
			<div class="row">
				<div class="col-lg-3 header-info mt-5">
					<h3 class="heading">Bize Ulaşın</h3>
					<p>Aşağıdaki Adresden Bizi Yerimizde Ziyaret Edebilirsiniz</p>
					<div class="map">
						<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d390227.531924662!2d28.76503141977573!3d40.17228805903084!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14ca3c330cd4513b%3A0x67ea9d59607ca3a!2sOsmangazi%CC%87%2FBursa!5e0!3m2!1str!2str!4v1728341987738!5m2!1str!2str"
								allowfullscreen></iframe>
					</div>
				</div>
				<div class="main_grid_contact col-lg-9">
					<div class="form text-center">

						<form method="post" asp-controller="Showcase" asp-action="AddContact">

							<div class="form-group">
								<label class="my-2">İsim Soyisim</label>
								<span asp-validation-for="name" class="text-danger"></span>
								<input class="form-control" type="text" name="name" placeholder="">
							</div>
							<div class="form-group">
								<label>Mail</label>
								<span asp-validation-for="mail" class="text-danger"></span>
								<input class="form-control" type="email" name="mail" placeholder="">
							</div>
							<div class="form-group">
								<label>Müracaat</label>
								<span asp-validation-for="comment" class="text-danger"></span>
								<textarea id="textarea" name="comment" rows="10" cols="10" placeholder=""></textarea>
							</div>
							<div class="input-group1">
								<input class="form-control" type="submit" value="Gönder">
							</div>
							
						</form>
					</div>
				</div>

			</div>

		</div>

	</div>
</section>