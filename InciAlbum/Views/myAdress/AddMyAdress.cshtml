@model InciAlbum.EntityLayer.Concrete.myAdress
@{
    ViewData["Title"] = "AddMyAdress";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">Yeni Adres Ekle</h2>

    <form method="post" class="p-4 border rounded shadow-sm bg-light">
        <div class="mb-3">
            <label for="tittle" class="form-label">Sokak/Mahalle</label>
            <input type="text" asp-for="descreption1" class="form-control" id="descreption1" />
        </div>

        <div class="mb-3">
            <label for="descreption2" class="form-label">Semt</label>
            <input type="text" asp-for="descreption2" class="form-control" id="descreption2" />
        </div>

        <div class="mb-3">
            <label for="descreption3" class="form-label">Şehir</label>
            <input type="text" asp-for="descreption3" class="form-control" id="descreption3" />
        </div>

        <div class="mb-3">
            <label for="phone" class="form-label">Telefon</label>
            <input type="text" asp-for="phone" class="form-control" id="phone" />
        </div>

        <div class="mb-3">
            <label for="map" class="form-label">Harita Url</label>
            <input type="text" asp-for="map" class="form-control" id="map" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-dark">Kaydet</button>
        </div>
    </form>
</div>

<style>
    .container-fluid {
        background-color: #f8f9fa;
        padding: 30px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-dark {
        background-color: #343a40;
        color: white;
    }

        .btn-dark:hover {
            background-color: #495057;
        }
</style>
