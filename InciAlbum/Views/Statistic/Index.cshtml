<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İstatistikler</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .my-title {
            margin: 20px 0;
            font-weight: bold;
            color: #0056b3; /* Başlık rengini özelleştirebilirsiniz */
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Hafif bir gölge efekti */
            border: 1px solid #e0e0e0; /* Kart sınırlarını belirginleştirme */
            margin: 10px 0; /* Kartların arasında biraz boşluk */
            text-align: center;
        }

            .card h5 {
                font-size: 1.1rem;
            }

        .breadcrumb {
            background: #f8f9fa; /* İsteğe göre arka plan rengi */
            border-radius: 5px; /* Kenarları yuvarlama */
            padding: 5px 10px; /* İç boşluk */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-title">İstatistikler</h1>
        <br />

        <div class="row">
            <!-- 1. Kart -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Toplam Ürün Sayımız</h5>
                        <nav class="d-flex justify-content-center">
                            <ol class="breadcrumb">
                                @ViewBag.urun
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- 2. Kart -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Toplam Görsel Sayısı</h5>
                        <nav class="d-flex justify-content-center">
                            <ol class="breadcrumb">
                                @ViewBag.ft
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- 3. Kart -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Mevcut Mesaj Sayısı</h5>
                        <nav class="d-flex justify-content-center">
                            <ol class="breadcrumb">
                                @ViewBag.msg
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>

            <!-- 4. Kart -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Çalışan Sayısı</h5>
                        <nav class="d-flex justify-content-center">
                            <ol class="breadcrumb">
                                @ViewBag.stuff
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
