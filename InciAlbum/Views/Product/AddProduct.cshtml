@model InciAlbum.EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">Yeni Ürün Ekle</h2>

    <form method="post" class="p-4 border rounded shadow-sm bg-light">
        <div class="mb-3">
            <label  class="form-label">Ürün Adı</label>
            <span asp-validation-for="productName" class="text-danger"></span>
            <input type="text" asp-for="productName" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Açıklaması</label>
            <span asp-validation-for="descreption" class="text-danger"></span>
            <input type="text" asp-for="descreption" class="form-control"  />
        </div>

        <div class="mb-3">
            <label class="form-label"> Görsel</label>
            <span asp-validation-for="imageUrl" class="text-danger"></span>
            <input type="text" asp-for="imageUrl" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Fiyat</label>
            <span asp-validation-for="price" class="text-danger"></span>
            <input type="text" asp-for="price" class="form-control"  />
        </div>

        
        <div class="text-center">
            <button type="submit" class="btn btn-dark">Kaydet</button>
        </div>
    </form>
</div>

<style>
    .container-fluid {
        background-color: #f8f9fa;
        padding: 30px;
    }

    .form-label {
        font-weight: bold;
    }

    .btn-dark {
        background-color: #343a40;
        color: white;
    }

        .btn-dark:hover {
            background-color: #495057;
        }
</style>

