@using InciAlbum.EntityLayer.Concrete
@model List<Notice>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/admin_Layout.cshtml";
}

<h1 class="text-center my-title">Duyurularımız</h1>
<br />
<div class="table-responsive">
    <table class="table table-hover table-bordered my-table">
        <thead class="thead-light">
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Tarih</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.noticeId</td>
                    <td>@item.tittle</td>
                    <td>@item.descreption</td>
                    <td>@Convert.ToDateTime(item.date).ToString("dd/MM/yyyy")</td>
                    <td><a class="btn btn-outline-danger" href="/Notice/DeleteNotice/@item.noticeId">Sil</a></td>
                    <td><a class="btn btn-outline-success" href="/Notice/UpdateNotice/@item.noticeId">Güncelle</a></td>

                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("AddNotice", "Notice")" class="btn btn-dark-gray">Yeni Duyuru Ekle</a>
</div>

<style>
    .my-title {
        font-family: 'Arial', sans-serif;
        font-size: 2.5rem;
        color: #003366;
        margin-bottom: 20px;
    }

    .my-table {
        background-color: #ffffff;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .table th {
        background-color: #003366;
        color: white;
    }

    .table td {
        text-align: center;
    }

    .btn-dark-gray {
        background-color: #003366;
        color: white;
        padding: 10px 20px;
        font-size: 1.2rem;
        border: none;
        border-radius: 0.3rem;
    }

        .btn-dark-gray:hover {
            background-color: #555555;
        }
</style>

